<%- include('../Layouts/header.ejs') %>
<style>
  .rich-content {
    max-width: 400px; /* Limit width for long content */
    max-height: 150px; /* Optional: Limit height with scroll */
    overflow: auto; /* Add scroll if content exceeds limits */
    word-wrap: break-word; /* Ensure long words don't overflow */
    padding: 10px; /* Add some spacing */
    background-color: #f9f9f9; /* Optional: Background for readability */
    border-radius: 5px; /* Optional: Rounded corners */
  }
  .rich-content p img{
    width: 100px!important;
    height: auto!important;
    border-radius: 0!important;
  }
  .blogImage{
    width: 200px!important;
    height: auto!important;
    object-fit: contain;
    border-radius: 0!important;
  }
  .blogTitle {
    width: 150px !important;
    word-wrap: break-word !important;
    overflow-wrap: break-word !important;
    white-space: normal !important;
}
</style>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
              <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Blog Data</h4>
                    <p class="card-description"> Add class <code>.table-bordered</code>
                    </p>
                    <div class="table-responsive pt-3">
                      <table class="table table-bordered">
                        <thead>
                          <tr>
                            <th> # </th>
                            <th> Title </th>
                            <th> Category </th>
                            <th> Blog Thumbnail </th>
                            <th> Description </th>
                            <th> BlogContent </th>
                            <th> Status </th>
                            <th colspan="2"> Actions </th>
                          </tr>
                        </thead>
                        <tbody>
                        <% blogData.map((v,i)=>{ %>
                            <tr>
                              <td> <%=++i%> </td>
                              <td> <p class="blogTitle"><%=v.title%></p></td>
                              <td> <%=v.categoryId.categoryName%></td>
                              <td> <img src="<%=v.blogImage%>" class="blogImage" alt="blog image"></td>
                              <td> <p class="blogTitle"><%=v.description%></p> </td>
                              <td class="rich-content blogImage"> <%- v.blogContent %> </td>
                              <% if(v.status==true){ %>
                                <td><a href="changeStatus/?status=<%=!v.status%>&id=<%=v.id%>" class="btn btn-success">Active</a></td>
                              <% }else{ %>
                                <td><a href="changeStatus/?status=<%=!v.status%>&id=<%=v.id%>" class="btn btn-danger">Deactive</a></td>
                              <%}%>
                              <td> <a href="/admin/blogs/deleteBlogs/?id=<%=v._id%>" class="btn btn-inverse-danger">Delete</a> </td>
                              <td> <a href="/admin/blogs/editBlogs/?id=<%=v._id%>" class="btn btn-inverse-info">Update</a> </td>                    
                            </tr>
                        <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
          </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <footer class="footer">
            <div class="d-sm-flex justify-content-center justify-content-sm-between">
              <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Premium <a href="https://www.bootstrapdash.com/" target="_blank">Bootstrap admin template</a> from BootstrapDash.</span>
              <span class="float-none float-sm-end d-block mt-1 mt-sm-0 text-center">Copyright Â© 2023. All rights reserved.</span>
            </div>
          </footer>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
